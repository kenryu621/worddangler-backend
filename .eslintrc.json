{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".mjs",
                    ".js"
                ]
            }
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:json/recommended",
        "plugin:import/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "jest"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 160
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "next"
            }
        ],
        "import/order": 2,
        "import/no-duplicates": 2,
        "import/namespace": 0,
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
    }
}